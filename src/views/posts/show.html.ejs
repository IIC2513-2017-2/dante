<article class="post-item post-show">
  <header class="post-header">
    <h1 class="post-title"><%= post.title %></h1>
    <span class="post-meta">
      <time datetime="<%= post.publishDate %>"><%= post.displayDate() %></time> Â·
      <span class="post-author">
        <img class="post-author-gravatar" src="<%= post.author.gravatarUrl(40) %>" alt="Gravatar de <%= post.author.fullName() %>" />
        <%= post.author.fullName() %>
      </span>
    </span>
  </header>

  <div class="post-body">
    <%- post.body %>
  </div>
</article>
