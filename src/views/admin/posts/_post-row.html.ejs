<li class="table-row">
  <div class="table-cell">
    <div class="post-details">
      <a href="<%= previewPostPath(post) %>">
        <span class="post-title"><%= post.title %></span>
        <span class="post-excerpt"><%= post.getExcerpt() %></span>
      </a>
      <span class="post-meta">
        <img class="post-author-gravatar" src="<%= post.author.gravatarUrl(30) %>" alt="Gravatar de <%=post.author.username %>" />
        <%= post.author.username %>, <%= post.displayDate() %>
      </span>
    </div>
  </div>

  <div class="table-cell">
    <%- include('_post-badge') %>
  </div>
  <div class="table-cell">
    <a href="<%= previewPostPath(post) %>" class="btn btn-small btn-clear">Ver</a>
    <a href="<%= postEditPath(post) %>" class="btn btn-small">Editar</a>
  </div>
</li>
